// Use DBML to define your database structure
// Docs: https://dbml.dbdiagram.io/docs

Table location {
  id bigint [primary key]
  caption varchar(255)
  lat double
  lon double
  geohash int
  create_at timestamp
  created_by bigint 
}

Table post {
  id bigint [primary key]
  text varchar(1000)
  location_id bigint
  create_at timestamp
  created_by bigint 
}

Table post_photo {
  id bigint [primary key]
  caption varchar(255)
  media_id bigint
  post_id bigint
}

Ref: post.location_id > location.id
Ref: post.id < post_photo.post_id
